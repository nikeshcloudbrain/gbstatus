<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GB" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryVariant">@color/colorMain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

<!--        <item name="colorOnSecondary">@color/black</item>-->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
<item name="android:windowBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="Theme.GB" parent="Base.Theme.GB" />
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/kanit_medium</item>

    </style>
    <style name="RatingBar" parent="@style/Theme.AppCompat">
        <item name="colorControlActivated">#FF9800</item>
        <item name="colorControlNormal">#FF9800</item>
    </style>

    <style name="styleButton">
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>




    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet</item>
    </style>

    <style name="textStyleNormal">
        <item name="android:fontFamily">@font/kanit_regular</item>
    </style>

    <style name="textStyleSemiBold">
        <item name="android:fontFamily">@font/kanit_medium</item>
    </style>
    <style name="textStyleBold">
        <item name="android:fontFamily">@font/kanit_bold</item>
    </style>
    <style name="InfoButtonStyle">
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:paddingLeft">31dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="paddingStart">24dp</item>
    </style>

    <style name="sticker_packs_list_item_author_style">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">clip_horizontal</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/kanit_regular</item>
    </style>

    <style name="CustomSpinnerStyle" parent="CustomTheme">
        <item name="android:popupBackground">@drawable/custom_spinner_dropdown_background</item>
        <item name="android:dropDownSelector">@drawable/custom_spinner_dropdown_selector</item>
        <item name="android:divider">#808080</item>
        <item name="android:dividerHeight">1dp</item>

    </style>
    <style name="CustomTheme">
        <item name="android:background">@drawable/bg_shape2</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>